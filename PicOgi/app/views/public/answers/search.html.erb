<% if @answers == [] %>
<h2 class = "seach-result">検索結果はありません</h2>
<% else %>
<div class = "post-contents">
  <ul class = "post-list">
    <% @answers.each do |answer| %>
    <li class = "list">
   <%= answer.created_at.strftime('%Y/%m/%d') %>
    </li>
    <li class = "list">
     <%= answer.user.nickname %>
    </li>
     <li class = "list">
     <%= answer.answer %>
    </li>
     <li class = "list">
    </li>
    <% end %>
  </ul>
</div>
<% end %>