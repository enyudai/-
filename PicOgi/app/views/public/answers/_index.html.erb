<td class="answers-count">
  回答数: <%= @subject.answers.count %>
</td>
      
  <% subject.answers.each do |answer| %>
    <td class="answers-count">
      <%= answer.created_at.strftime('%Y/%m/%d') %>
        <%= answer.user.nickname %>
        <%= answer.answer %>
        <%# if answer.user != current_user %>
           <%#= link_to "通報", new_subject_answer_report_path(subject.id, answer.id), class: "btn btn-danger" %>
        <%# end %>
        <% if answer.user == current_user %>
          <%= link_to "削除", subject_answer_path(subject.id, answer.id), method: :delete, remote: true %>
        <% end %>
    </td>
    <td id="favorite-btn_<%= answer.id %>">
      <% if current_user.nickname != "guestuser" %>
        <%= render "public/favorites/favorite-btn", {subject: @subject, answer: answer} %>
      <% end %>
    </td>
  <% end %>
