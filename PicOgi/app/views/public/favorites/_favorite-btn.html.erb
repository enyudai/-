<% if answer.favorited_by?(current_user) %>
  <%= link_to answer.favorites.count, subject_answer_favorites_path(subject, answer), method: :delete, remote: true, class: "glyphicon glyphicon-heart" %>
<% else %>
  <%= link_to answer.favorites.count, subject_answer_favorites_path(subject, answer), method: :post, remote: true, class: "glyphicon glyphicon-heart-empty" %>
<% end %>
