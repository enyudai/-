<div class = 'container'>
  <div>
      <%= image_tag  @user.get_profile_image(100,100) %>
  </div>
  <div class = 'mx-auto text-center'>
    <h3>ニックネーム</h3>
    <h3><%= @user.nickname %></h3>
  </div>
  <div class = 'row mx-auto text-center'>
    <h3>メールアドレス</h3>
    <h3><%= @user.email %></h3>
  </div>
  <div>
    <h3>自己紹介</h3>
    <h3><%= @user.introduction %></h3>
  </div>
  <% if @user.nickname != "guestuser" %>
    <div>
      <%= link_to '編集',  edit_user_path(@user), class: "btn btn-outline-secondary btn-block" %>
    </div>
  <% end %>
  
  <div class = 'row mx-auto text-center'>
     <h3>投稿一覧</h3>
     <% @subject.each do |subject| %>
     <ul class="list-inline">
       <li class="list-inline-item"><%= subject.time_limit %></li>
       <li class="list-inline-item"><%= image_tag subject.get_subject_image(100,100) %></li>
       <li class="list-inline-item"><%= subject.title %></li>
       <li class="list-inline-item"><%= link_to "編集", edit_subject_path(subject.id) %></li>
       <li class="list-inline-item"><%= link_to "削除", subject_path(subject.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></li>
     </ul>
     <% end %>
  </div>
  
</div>
