<div class = 'container-fluid user-box'>
  <div class="row">
    <div class="col-lg-12 user-show-box">
    
      <div class ="d-flex justify-content-center">
        <%= image_tag  @user.get_profile_image(100,100), class: "img-thumbnail rounded-circle"  %>
        </div>
      
      <div class="user-text1 d-flex justify-content-center">
      自己紹介
      <%= @user.introduction %>
      </div>
      
      <div class="mb-2 d-flex justify-content-center">
      <%= @user.nickname %> 
      </div>
      
      <div class="mb-2 d-flex justify-content-center">
      <% if @user.nickname != "guestuser" %>
      <%= link_to '編集',  edit_user_path(@user), class: "btn btn-primary" %>
      <% end %>
      </div>
      
      <div class="mb-2 d-flex justify-content-center">
      <%= @user.email %><br/>
      投稿<%= @subjects.count %>件
      </div>
    </div>
  </div>
    
  <div class = "row">
    <div class = "col-md-8 offset-md-2">
      <div class="user-text d-flex justify-content-center">
        投稿一覧
      </div>
      <table class="table table-hover table-inverse" style="margin-top:15px">
        <thead>
          
          <tr>
            <th scope="col"></th>
            <th scope="col">期限</th>
            <th scope="col">お題画像</th>
            <th scope="col">タイトル</th>
            <th scope="col">期限が切れたら変えてください</th>
            <th scope="col"></th>
            <th scope="col"></th>
          </tr>
          
        </thead>
        <tbody>
            <% @subjects.each do |subject| %>
            <tr>
              <td><%= link_to "参加", subject_path(subject.id), class: "btn btn-info" %></td>
              <td> <%= subject.time_limit %></td>
              <td><%= image_tag subject.get_subject_image(100,100) %></td>
              <td><%= subject.title %></td>
              <td>
                <%#= form_with model: @subject, url: subject_path(subject.id), method: :patch, local: true do |f| %>
                      <%#= f.select :comment_off_status %>
                      <%#= f.submit "更新", class: "btn btn-warning" %>
                <%# end %>
              </td>
              <td><%= link_to "編集", edit_subject_path(subject.id), class: 'btn btn-primary' %></td>
              <td> <%= link_to "削除", subject_path(subject.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: 'btn btn-danger' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row pt-4">
    <div class="col d-flex  justify-content-center">
      <%= paginate @subjects %>
    </div>
  </div>
</div>
  
    

