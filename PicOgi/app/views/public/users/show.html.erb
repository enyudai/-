<div class = 'container-fluid user-box'>
  
  <div class="row">
    
    <div class="col-lg-5 row ">
      
      <div class="col row user-box-sm">
      
        <div class="col d-flex justify-content-end align-items-start">
          <div class="profile_image-box">
            <%= image_tag  @user.get_profile_image(100,100), class: "img-thumbnail rounded-circle"  %> 
          </div>
        </div>
  
        <div class="col  row d-flex align-items-start">
           <div class="flex-column">
             
             <div class="mb-3">
               
               <div class="user-text">
                 <%= @user.nickname %> 
               </div>
               
               <% if @user.nickname != "guestuser" %>
                 <div class="user-text">
                   <%= link_to edit_user_path(@user) do %>
                     プロフィールを編集
                     <i class='bx bx-user' ></i>
                   <% end %>
                 </div>
               <% end %>
            
             </div>
           
             <div class="mb-3 row">
               <div class="col-lg-4 user-text">
                 投稿<%= @subjects.count %>件
               </div>
               <div class="col-lg-8 user-text">
                 <%= @user.email %>
               </div>
             </div>
           
             <div class="user-text">
               <%= simple_format(h(@user.introduction)) %>
             </div>
            </div>
         </div>
         
      </div>
      
    </div>

    
    <div class = "col-lg-7">
      <div class="user-index-text d-flex justify-content-center">
        投稿一覧
      </div>
      <table class="table table-hover table-inverse" style="margin-top:15px">
        <thead>
          
          <tr>
            <th scope="col"></th>
            <th scope="col">期限</th>
            <th scope="col">お題画像</th>
            <th scope="col">タイトル</th>
            <th scope="col"></th>
            <th scope="col"></th>
          </tr>
          
        </thead>
        <tbody>
            <% @subjects.each do |subject| %>
            <tr>
              <td><%= link_to "参加", subject_path(subject.id), class: "btn btn-info" %></td>
              <td> <%= subject.time_limit %></td>
              <td><%= image_tag subject.get_subject_image(100,100) %></td>
              <td><%= subject.title %></td>
              <td><%= link_to "編集", edit_subject_path(subject.id), class: 'btn btn-primary' %></td>
              <td> <%= link_to "削除", subject_path(subject.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: 'btn btn-danger' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  
  </div>
  
  <div class="row pt-4">
    <div class="col d-flex  justify-content-center">
      <%= paginate @subjects %>
    </div>
  </div>
  
</div>
  
    

