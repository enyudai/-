<div class = 'container-fluid user-box'>
 <div class="row">
   <div class="col-lg-12">
       
     <div class ="user-image-box d-flex justify-content-center"><%= image_tag  @user.get_profile_image(100,100)%></div>
     
        <div class="user-text1 d-flex justify-content-center">
            自己紹介
          <%= @user.introduction %>
        </div>
        
      <div class="mb-2 d-flex justify-content-center">
        <%= @user.nickname %> 
      </div>
      
      <div class="mb-2 d-flex justify-content-center">
        <% if @user.nickname != "guestuser" %>
          <%= link_to '編集',  edit_user_path(@user), class: "btn btn-primary" %>
        <% end %>
      </div>
      
      <div class="mb-2 d-flex justify-content-center">
        <%= @user.email %><br/>
        投稿<%= @subjects.count %>件
      </div>
  </div>
 </div>
 
 <div class = 'row g-4'>
   <div class = "col-lg-12">
     <div class="user-text d-flex justify-content-center">投稿一覧</div>
       <% @subjects.each do |subject| %>
         <ul class="list-inline subjects-index d-flex justify-content-center align-items-center ">
            
                <li class="list-inline-item user-text2 mb-2">
                    <%= link_to "参加", subject_path(subject.id), class: "btn btn-info" %>
                </li>
            
            
              <li class="list-inline-item user-text2 mb-2">
                <%= subject.time_limit %>
              </li>
           
           
              <li class="list-inline-item user-text2 mb-2">
                <%= image_tag subject.get_subject_image(100,100) %>
              </li>
          
            
              <li class="list-inline-item user-text2 mb-2">
                  <%= subject.title %>
              </li>
         
            
              <li class="list-inline-item user-text2 mb-2">
                <%= link_to "編集", edit_subject_path(subject.id), class: 'btn btn-primary' %>
              </li> 
   
            
              <li class="list-inline-item user-text2 mb-2">
                <%= link_to "削除", subject_path(subject.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: 'btn btn-danger' %>
              </li>
         
         </ul>
         <%#= paginate subject %>
     <% end %>
     
   </div>
  </div>
 
</div>

 
