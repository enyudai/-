<div class = 'container'>
  <div>
    <% if  @profile_image.attached? %>
      <%= image_tag  @profile_image, size: "100,100" %>
    <% else %>
      <%= image_tag 'no_image', size: "100x100" %>
    <% end %>
  </div>
  <div>
    <h3>ニックネーム</h3>
    <h3><%= @user.nickname %></h3>
  </div>
  <div>
    <h3>メールアドレス</h3>
    <h3><%= @user.email %></h3>
  </div>
  <div>
    <h3>自己紹介</h3>
    <h3><%= @user.introduction %></h3>
  </div>
  <div>
    <%= link_to '編集',  edit_user_path(@user), class: "btn btn-outline-secondary btn-block" %>
  </div>
  
  <div>
     <h3>投稿一覧</h3>
     <!-- 投稿機能作ってから -->
    <!--%= render 'index', subjects: @subjects %>-->
  </div>
</div>
