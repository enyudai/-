<div class = 'container-fluid edit-box'>
  
    <div class = "row">
      
      <div class = "col-lg-12 d-flex align-items-center justify-content-center ">
        
        <div class="edit-box-sm">
          
           <%#エラーメッセージ %>
           <% if @user.errors.any? %>
             <%= @user.errors.count %>件のエラーが発生しました
             <ul>
               <% @user.errors.full_messages.each do |message| %>
                 <li>
                   <%= message %>
                 </li>
               <% end %>
             </ul>
           <% end %>
       
          <%= form_with model: @user, local:true do |f| %>
            <div class="form-group pt-4 edit-text1">
              <%= f.label :ニックネーム, class: 'form-label' %>
              <%= f.text_field :nickname, class: 'form-control' %>
            </div>
            <div class="form-group pt-4  edit-text1">
              <%= f.label :メールアドレス, class: 'form-label' %>
              <%= f.email_field :email, class: 'form-control' %>
            </div>
            <div class="form-group pt-4">
              <%= f.file_field :profile_image, accept: "image/jpg,image/jpeg,image/png,image" %>
            </div>
           <div class="form-group pt-4 edit-text1">
              <%= f.label :自己紹介, class: 'form-label' %>
              <%= f.text_area :introduction, class: 'form-control' %>
           </div>
            <div class="form-group pt-4 edit-text1">
              <%= f.submit "保存", class: ' btn btn-success' %>
              <%= link_to "退会", users_is_deleted_path, class: 'btn btn-danger' %>
            </div>
          <% end %>
       </div>
       
      </div>
     
    </div>
    
</div>
 

