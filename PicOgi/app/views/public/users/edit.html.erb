<div class = 'container'>
  <%= form_with model: @user, local:true do |f| %>
    <div class="form-group">
      <%= f.label :ニックネーム %>
      <%= f.text_field :nickname %>
    </div>
    <div class="form-group">
      <%= f.label :メールアドレス %>
      <%= f.email_field :email %>
    </div>
    <div class="form-group">
      <%= f.file_field :profile_image %>
    </div>
    <div class="form-group">
      <%= f.label :自己紹介 %>
      <%= f.text_area :introduction %>
    </div>
    <div class="form-group">
      <%= f.submit "保存", class: ' btn-success' %>
    </div>
  <% end %>
</div>

