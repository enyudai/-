<div class = 'container'>
  
  <div class = "row">
    <h3>話題の投稿</h3>
  </div>

  <% @all_ranks.each do |answer| %>
  <div class="card" style="width: 18rem;">
    <%= image_tag answer.subject.get_subject_image(100,100), class: "card-img-top" %>
    <div class="card-body">
      <div class = "row">
        <div class = "col">
          <i class='bx bx-like'><%= answer.favorites.count %></i>
       </div>
      </div>
      
      <div class = "row">
        <div class = "col-md-5">
           <h5><%= answer.user.nickname %></h5>
        </div>
        <div class = "col-md-6">
           <h5><%= answer.answer %></h5>
        </div>
      </div>
      
      <div class = "row">
        <div class = "col">
          <%= link_to "参加", subject_path(answer.subject.id), class: "btn btn-info" %>
        </div>
      </div>
    
    </div>
  </div>  
  <% end %>
   <%= paginate @all_ranks %>
</div>


