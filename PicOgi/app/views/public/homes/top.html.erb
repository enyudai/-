<div class = 'container-fluid top-box'>
  
  <div class = "row g-4 top-box-sm">
      <% @all_ranks.each.with_index(5) do |answer| %>
      <div class="col-lg-4 col-sm-6">
            <div class="servicce top-card-effect">
              
              <div class="icon-box d-flex align-items-center justify-content-center">
                 <i class='bx bxs-like'><%= answer.favorites.count %></i>
              </div>
              
              <div class=" d-flex align-items-center justify-content-center">
                <div class ="home-image-box">
                 <%= image_tag answer.subject.get_subject_image(100,100) %>
                </div>
              </div>

              <div class =" top-text  text-center"><%= answer.user.nickname %></div>
              
              <div class =" top-text text-center"><%= answer.answer %></div>
              
              <div class="text-center">
                <%= link_to "参加", subject_path(answer.subject.id), class: "btnripple3" %>
              </div>
              
            </div>
       </div>
      <% end %>
      <div class="row pt-4">
        <div class="col d-flex  justify-content-center">
         <%= paginate @all_ranks %>
        </div>
      </div>
  </div>

</div>





