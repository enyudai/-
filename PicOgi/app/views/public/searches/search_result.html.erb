
<div class = "container">
  <div class = "row">
    <div class = "col-md-8 offset-md-2">
        <table class="table table-hover table-inverse" style="margin-top:15px">
            
          <% if @range == "User" %>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td><%= user.nickname %></td>
                </tr>
              <% end %>
            </tbody>
            
          <% elsif @range == "Subject"  %>
            <tbody>
              <% @subjects.each do |subject| %>
                <tr>
                  <td><%= image_tag subject.get_subject_image(100,100) %></td>
                  <td><%= subject.user.nickname %></td>
                  <td><%= subject.title %><%= subject.tags.map(&:name).join(', ') %></td>
                  <td><%= link_to '参加', subject_path(subject.id) %></td>
                </tr>
              <% end %>
            </tbody>
            
             <% if @range == "Answer" %>
            <tbody>
              <% @answers.each do |answer| %>
                <tr>
                  <td><%= answer.created_at.strftime('%Y/%m/%d') %></td>
                  <td><%= answer.user.nickname %></td>
                  <td><%= answer.answer %></td>
                </tr>
              <% end %>
            </tbody>
            
          <% end %>
        </table>
    </div>
  </div>
</div>