<% if subject.favorited_by?(current_user) %>
  <%= link_to subject.favorites.count, subject_user_subject_answer_favorites_path(subject), method: :delete, remote: true, class: "glyphicon glyphicon-heart" %>
<% else %>
  <%= link_to subject.favorites.count, subject_user_subject_answer_favorites_path(subject), method: :post, remote: true, class: "glyphicon glyphicon-heart-empty" %>
<% end %>