<div class = "container-fluid reports-index-box">
  <div class = "row">
    <div class = "col-md-8 offset-md-2">
      <table class="table table-hover table-inverse" style="margin-top:15px">
        <thead>
          
          <tr>
            <th scope="col"></th>
            <th scope="col">理由</th>
            <th scope="col">進捗</th>
          </tr>
          
        </thead>
        <tbody>
            <% @reports.each do |report| %>
            <tr>
              <td><%= link_to "詳細", subject_path(report.subject), class: "btn btn-primary" %></td>
              <td><%= report.reason %></td>
              <td><%= report.report_status_i18n %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%= paginate @reports %>
</div>