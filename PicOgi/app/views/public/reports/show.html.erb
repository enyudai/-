<div class = "container">
  <div class = "row">
    <div class = "col-md-8 offset-md-2">
     <table class="table">
      <tbody>
        <tr>
          <td>通報ID</td>
          <td><%= link_to @report.id %></td>
        </tr>
        <tr>
          <td>会員名</td>
          <td><%= @report.report.subject.user.nickname %></td>
        </tr>
        <tr>
          <td>理由</td>
          <td><%= @report.reason %></td>
        </tr>
        <tr>
          <td>通報者</td>
          <td><%= @report.report.user.nickname %></td>
        </tr>
        <tr>
          <td>対応ステータス</td>
          <td>
            <%= @report.report_status_i18n %>
            <%= form_with model: @report, url: admin_report_path(@report), method: :patch, local: true do |f| %>
              <%= f.select :report_status, Report.report_statuses_i18n.keys.map {|k| [I18n.t("enums.report.report_status.#{k}"), k]} %>
              <%= f.submit '更新' %>
            <% end %>
          </td>
        </tr>
      </tbody>
      </table>
    </div>
  </div>
</div>