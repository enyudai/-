<div class = 'container'>
  <div>
    <%= image_tag  @subject.subject_image, size: "100,100" %>
  </div>
  <div>
    <h3>期限</h3>
    <%= @subject.time_limit %>
  </div>
  <div>
    <h3>タイトル</h3>
    <%= @subject.title %>
  </div>
  <div>
    <h3>お題</h3>
    <%= @subject.theme %>
  <%#= @subject.subject_image.signed_id %>
  </div>
  <div>
    <%= form_with model: @subject, url: subjects_path, method: :post do |f| %>
    <%#= f.hidden_field :subject_image, value: f.object.subject_image.signed_id %>
    <%= f.hidden_field :status, value: true %>
    <%#= f.hidden_field :subject_image, value: @subject.subject_image  %>
    <%= f.hidden_field :time_limit %>
    <%= f.hidden_field :title %>
    <%= f.hidden_field :theme %>
    <p>こちらでよろしいでしょうか？<%= f.submit "はい" %></p>
    <% end %> 
  </div>
</div>