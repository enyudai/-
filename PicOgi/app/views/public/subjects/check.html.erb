<div class = 'container-fluid subject-check-box'>
    <div class = "row">
      
      <div class = "col-lg-12 d-flex align-items-center justify-content-center ">
        
        <div class="subject-check-box-sm">
          
            <div class="form-group pt-4 subject-check-text1 d-flex  justify-content-center">
              <%= image_tag  @subject.get_subject_image(100,100) %>
            </div>
            <div class="form-group pt-4 subject-check-text1 text-center">
                タイトル<br/>
                <%= @subject.title %>
            </div>
            <div class="form-group pt-4 subject-check-text1 text-center">
                お題<br/>
                <%= @subject.theme %>
            </div>
           <div class="form-group pt-4 subject-check-text1 text-center">
              タグ</br>
              <% @subject.tags.each do |tag| %>
                <%= tag.name %>
              <% end %>
           </div>
            <div class="form-group pt-4 subject-check-text1 text-center">
               <%= form_with model: @subject, url: subjects_path, method: :post do |f| %>
                  <!-- statusをtrueにする事でsubject_imageを公開にしていす-->
                  <%= f.hidden_field :status, value: true %>
                  <%= f.hidden_field :time_limit %>
                  <%= f.hidden_field :title %>
                  <%= f.hidden_field :theme %>
                  こちらでよろしいでしょうか？<%= f.submit "はい", class: "btn btn-success" %>
               <% end %> 
            </div>

       </div>
       
      </div>
     
    </div>
    
</div>