<div class = 'container'>
  <div>
    <p><%= @subject.user.nickname %></p>
    <p><%= image_tag @subject.subject_image %></p>
    <p><%= @subject.time_limit %></p>
    <p><%= @subject.title %></p>
    <p><%= @subject.theme %></p>
  </div>
  
  <table class = "answers">
    <tr id="subject_<%= @subject.id %>">
      <td class="favorite-btn"><%= render "public/user_subject_answer_favorites/favorite-btn", {subject: @subject, user_subject_answers: @subject.user_subject_answers} %></td>
      <td class="answers-count">回答数: <%= @subject.user_subject_answers.count %></td>
      <td class="answers-count"><%= render "public/user_subject_answers/index", subject: @subject %></td>
    </tr>
  </table>
 
  <div>
    <%= form_with model: [@subject, @answer], local: false do |f| %>
      <%= f.text_area :answer, size: "90x5" %>
      <%= f.submit "回答" %>
    <% end %>
  </div>
  
</div>