<div class = 'container'>
  <%= form_with model: @subject, local:true do |f| %>
    <div class="form-group">
     <%= f.file_field :subject_image, accept: "image/*" %>
    <div class="form-group">
      <%= f.label :期限 %>
      <%= f.text_field :time_limit %>
    </div>
    <div class="form-group">
      <%= f.label :タイトル %>
      <%= f.text_field :title %>
      <%= f.label :タグ (,で区切ると複数タグ登録できます) %>
      <%= f.text_field :name,value: @tag_list %>
  </div>
      
    </div>
    <div class="form-group">
      <%= f.label :お題 %>
      <%= f.text_area :theme %>
    </div>
    <div class="form-group">
      <%= f.submit "保存", class: ' btn-success' %>
    </div>
  <% end %>
</div>