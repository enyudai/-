<div class ="d-flex align-items-center session-box">
  <div class ="container-fluid">
    
      <div class="row">
        <div class="col-lg-3 mx-auto text-center">
          <div class="sign_up-box card-effect">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
              <%= render "public/shared/error_messages", resource: resource %>
            
              <div class ="sign_up-text1">Forgot your password?</div>
              <div class= "mt-4 mb-2 forget-text">
                <%= f.label :メールアドレス %><br/>
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </div>
           
              <div class= "mt-4 mb-2"> 
               <%= f.submit "確認用メールを送る" %>
            <% end %>
               <%- if controller_name != 'sessions' %>
                 <%= link_to new_session_path(resource_name) do  %>
                   <div class="forget-text">
                     ログイン
                   </div>
                 <% end %>
              <% end %>
              </div>
              
          </div>
        </div>
      </div>
    
  </div>
</div
