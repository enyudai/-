<div class ="d-flex align-items-center session-box">
  <div class ="container-fluid">
    
      <div class="row">
        <div class="col-lg-3 mx-auto text-center">
          <div class="session-box-sm card-effect">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            
              <div class ="session-text1">ログイン</div>
              <div class= "mt-4 mb-2 session-text2">
                 <%= f.label :メールアドレス %><br/>
                 <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </div>
              <div class= "mt-4 mb-2 session-text2">   
                 <%= f.label :パスワード %><br/>
                <%= f.password_field :password, autocomplete: "current-password" %>
              </div>
              <div class= "mt-4 mb-2 session-text2">   
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
              <div class= "mt-4 mb-2 row"> 
                <div class="col"><%= f.submit "ログイン", class: "link-sign_up-btn" %></div>
            <% end %>
                <div class="col">
                  <div class="session-text3">
                     <%= link_to "新規登録", new_registration_path(resource_name), class: "link-sign_up-btn" %>
                  </div>
                </div>
              </div>
              <div class="pt-4 row">
                <div class="col ">
                    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "link-sign_up-btn" %>
                </div>
              </div>
          </div>
        </div>
      </div>
    
  </div>
</div>