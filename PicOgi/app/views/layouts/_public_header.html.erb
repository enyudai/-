<div class = "container">
  <div class = "row">
    <div class = "col">
      <a href="/homes/top">PicOgi</a>
    </div>
    <div class = "col">
      <h3>お帰りなさい<%= current_user.nickname %></h3>
    </div>
    <div class = "col">
      <%= form_with url: search_path, local: true, method: :get, class: "search-form" do |form| %>
        <%= form.select :models, options_for_select([ ['User'], ['Subject'], ['Answer'], ['Tag'] ]) %>
        <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" %>
        <%= form.submit "検索", class: "search-btn" %>
      <% end %>
    </div>
    <div class = "col">
      <%= link_to current_user.nickname, user_path(current_user.id) %>
      <a href="/reports">通報一覧</a>
      <a href="/subjects/new">新規投稿</a>
      <a href="/users/sign_out">ログアウト</a>
    </div>
  </div>
</div>