<div class = 'container'>
  
 <div class="row justify-content-center my-5">
     
   <div class="col-4">
      <div class="mb-2">
        <%= image_tag @subject.get_subject_image(100,100), class: "mx-auto d-block" %>
      </div>
      <div class="row mb-2">
        <%= @subject.user.nickname %>
      </div>
      <div class="row mb-2">
        <%= @subject.time_limit %>
      </div>
      <div class="row mb-2 justify-content-center">
        <%= @subject.title %>
        <% @subject_tags.each do |tag| %>
          <%= tag.name %><%= "(#{tag.subjects.count})" %>
        <% end %>
      </div>
      <div class="row mb-2 justify-content-center">
        <%= @subject.theme %>
      </div>
      <div class="row mb-2 justify-content-center">
        <%= link_to "削除", admin_subject_path(@subject), method: :delete, class: "btn btn-danger" %>
      </div>
  </div>
 </div>
 
