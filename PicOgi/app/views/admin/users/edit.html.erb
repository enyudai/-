<div class = 'container'>
  <div class = "row">
  <!--エラーメッセージ-->
    <% if @user.errors.any? %>
      <%= @user.errors.count %>件のエラーが発生しました
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div class = "row">
    <div class = "col-md-4 offset-md-4">
        <div class="form-group">
          <%= f.label :ニックネーム, class: 'form-label' %>
          <%= f.text_field :nickname, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :メールアドレス, class: 'form-label' %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.file_field :profile_image, class: 'form-control' %>
        </div>
       <div class="form-group">
          <%= f.label :自己紹介, class: 'form-label' %>
          <%= f.text_area :introduction, class: 'form-control' %>
       </div>
      <%= form_with model: @user, url: admin_user_path(@user), local:true, method: :patch do |f| %>
       <div class="form-group">
          <%= f.label :is_deleted, '会員ステータス' %>
          <%= f.radio_button :is_deleted, 'false' %>
          <%= f.label :is_deleted, '有効', value: false, class: "font-weight-bold text-secondary" %>
          <%= f.radio_button :is_deleted, 'true' %>
          <%= f.label :is_deleted, '退会', value: true, class: "font-weight-bold text-secondary" %>
       </div>
          <%= f.submit "ステータスを更新", class: ' btn btn-success' %>
      <% end %>
   </div>
  </div>
</div>